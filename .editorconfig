root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.nix]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.md]
# Markdown uses trailing spaces for line breaks
trim_trailing_whitespace = false
max_line_length = 100
